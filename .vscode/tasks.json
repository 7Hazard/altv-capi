{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Parser Release",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/../../NINJA-WIN-RelWithDebInfo-BUILD.bat; Copy-Item '${workspaceFolder}/../../A-BUILD-NINJA-RelWithDebInfo/bin/altv-api-tool.exe' '${workspaceFolder}/tools/altv-api-tool.exe'",
            },
            "options": {
                "cwd": "${workspaceFolder}/../../"
            },
            "args": [],
            "group": "build",
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        },
        {
            "label": "Build Parser Debug",
            "type": "shell",
            "command": "${workspaceFolder}/../../NINJA-WIN-Debug-BUILD.bat",
            "options": {
                "cwd": "${workspaceFolder}/../../"
            },
            "args": [],
            "group": "build",
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        },
        {
            "label": "Build CAPI",
            "type": "shell",
            "command": "${workspaceFolder}/capi/build.bat",
            "options": {
                "cwd": "${workspaceFolder}/capi"
            },
            "args": [],
            "group": "build",
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        }
    ]
}
