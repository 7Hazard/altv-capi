{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate Release",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/../../NINJA-WIN-RelWithDebInfo-GEN.bat",
            },
            "linux": {
                "command": "cmake -G Ninja llvm -BA-BUILD-NINJA-RelWithDebInfo -DCMAKE_BUILD_TYPE=RelWithDebInfo -DLLVM_ENABLE_PROJECTS='clang;clang-tools-extra' -DLLVM_ENABLE_CXX1Z=ON -DLLVM_BUILD_TESTS=OFF",
            },
            "options": {
                "cwd": "${workspaceFolder}/../../"
            },
            "args": [],
            "group": "build",
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        },
        {
            "label": "Build Parser Release",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/../../NINJA-WIN-RelWithDebInfo-BUILD.bat; Copy-Item '${workspaceFolder}/../../A-BUILD-NINJA-RelWithDebInfo/bin/altv-api-tool.exe' '${workspaceFolder}/tools/altv-api-tool.exe'",
            },
            "linux": {
                "command": "cmake --build A-BUILD-NINJA-RelWithDebInfo --config RelWithDebInfo",
            },
            "options": {
                "cwd": "${workspaceFolder}/../../"
            },
            "args": [],
            "group": "build",
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        },
        {
            "label": "Build Parser Debug",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/../../NINJA-WIN-Debug-BUILD.bat",
            },
            "options": {
                "cwd": "${workspaceFolder}/../../"
            },
            "args": [],
            "group": "build",
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        },
        {
            "label": "Build CAPI",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/capi/build.bat",  
            },
            "linux": {
                "command": "cmake . -BBUILD -DCMAKE_BUILD_TYPE=RelWithDebInfo -GNinja && cmake --build BUILD --config RelWithDebInfo"
            },
            "options": {
                "cwd": "${workspaceFolder}/capi"
            },
            "args": [],
            "group": "build",
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        }
    ]
}
